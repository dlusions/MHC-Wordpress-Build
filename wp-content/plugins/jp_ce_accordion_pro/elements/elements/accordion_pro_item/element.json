{
    "@import": "./element.php",
    "name": "accordion_pro_item",
    "title": "Item",
    "width": 500,
    "placeholder": {
        "props": {
            "title": "Title",
            "content": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.",
            "image": ""
        }
    },
    "templates": {
        "render": "./templates/template.php",
        "content": "./templates/content.php"
    },
    "fields": {
        
        "content_type": {
            "label": "Content type",
            "type": "radio",
            "default": 0,
             "options": {
                 "Content" : 0,
                 "Module" : 1,
                 "Section" : 2,
				 "Sublayout" : 3
            }
        }, 
		"sublayout": {
            "type": "builder-fragment",
			"show": "content_type == '3'"
        },
		"unique_id": {
            "label": "Unique ID",
			"description": "Used to create url for every tab. for example user can access  this tab using url like https://example.com/#secondtab. Please make sure ID should be unque and that not used in same page"
        },
        "section_id": {
            "label": "Section ID",
            "source": true,
            "show": "content_type == '2'",
            "description": "Enter unque Section ID. All contents created inside section can be displayed accordion content area."
        },
         "module": {
              "type": "select-widget",
            "label": "Widget",
            "description": "ny WordPress widget can be displayed in your custom layout.",
            "default": "",
            "show": "content_type == '1'"
        },
        
        "title": {
            "label": "Title",
            "source": true
        },
        "content": {
            "label": "Content",
            "type": "editor",
            "show": "content_type == '0'",
            "source": true
        },
        "image": {
            "type": "image",
            "label": "Image",
            "source": true,
            "show": "content_type == '0'"
        },
        "image_alt": {
            "label": "Image Alt",
            "source": true,
            "show": "content_type == '0'",
            "enable": "image"
        },
        
        "link": {
            "type" : "link",
            "label": "Link",
            "source": true,
            "show": "content_type == '0'",
            "enable": "image"
        },

        "link_text": {
            "label": "Link Text",
            "description": "Set a different link text for this item.",
            "source": true,
            "show": "content_type == '0'",
            "enable": "link"
        },
        "link_aria_label": {
            "label": "Link ARIA Label",
            "description": "Set a different link ARIA label for this item.",
            "source": true,
            "enable": "link"
        },
        "status": "${builder.statusItem}",
        "source": "${builder.source}"
    },
    "fieldset": {
        "default": {
            "type": "tabs",
            "fields": [
                {
                    "title": "Content",
                    "fields": [
                        "title",
                        "content_type", 
                        "section_id",
                        "module",
                        "content",
                        "image",
                        "image_alt",
                        "link",
                        "link_text",
                        "link_aria_label",
						"unique_id"
                    ]
                },
				{
                    "title": "Sublayout",
					"enable": "content_type == '3'",
                    "fields": [
                        "sublayout"
                    ]
                },
                "${builder.advancedItem}"
            ]
        }
    }
}
