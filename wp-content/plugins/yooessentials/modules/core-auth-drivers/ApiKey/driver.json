{
    "name": "api-key",
    "title": "API Key",
    "description": "Key for authenticating API requests.",
    "icon": "${url:~yooessentials_url/modules/core-auth-drivers/ApiKey/icon.svg}",
    "endpoints": {
        "presave": "yooessentials/auth/api-key"
    },
    "fields": {
        "name": {
            "label": "Name",
            "description": "Optional name to identify this key."
        },
        "key": {
            "label": "API Key",
            "description": "The API Key created within a service.",
            "type": "yooessentials-secret",
            "encrypt": true,
            "attrs": {
                "required": true
            }
        },
        "mode": {
            "label": "Mode",
            "description": "Specify where the API Key should be included in the request.",
            "type": "select",
            "default": "header",
            "options": {
                "Header": "header",
                "Query Param": "query"
            }
        },
        "field_name": {
            "label": "Parameter Name",
            "description": "Specify the parameter name used to send the API Key, e.g. <code>?paramName=API_KEY</code>.",
            "default": "key",
            "show": "mode === 'query'",
            "attrs": {
                "required": true
            }
        }
    }
}
