{
    "@import": "./element.php",
    "name": "yooessentials_form_textarea",
    "title": "Textarea",
    "group": "Form Essentials",
    "icon": "${url:~yooessentials_url/modules/form-elements/form_textarea/icon.svg}",
    "iconSmall": "${url:~yooessentials_url/modules/form-elements/form_textarea/icon.svg}",
    "element": true,
    "submittable": true,
    "width": 500,
    "defaults": {
        "margin": "default",
        "control_id_inherit": true
    },
    "templates": {
        "render": "./templates/template.php"
    },
    "fields": {
        "control_rows": {
            "label": "Rows",
            "description": "The number of visible text lines.",
            "type": "number",
            "attrs": {
                "min": 1
            }
        },
        "control_attrs": "${yooessentials.form.fields.control_attrs}",
        "control_minlength": "${yooessentials.form.fields.control_minlength}",
        "control_maxlength": "${yooessentials.form.fields.control_maxlength}",
        "control_pattern": "${yooessentials.form.fields.control_pattern}",
        "control_error_message": "${yooessentials.form.fields.control_error_message}",
        "control_placeholder": "${yooessentials.form.fields.control_placeholder}",
        "control_autofocus": "${yooessentials.form.fields.control_autofocus}",
        "control_required": "${yooessentials.form.fields.control_required}",
        "control_readonly": "${yooessentials.form.fields.control_readonly}",
        "control_name": "${yooessentials.form.fields.control_name}",
        "control_id": "${yooessentials.form.fields.control_id}",
        "control_id_inherit": "${yooessentials.form.fields.control_id_inherit}",
        "control_value": "${yooessentials.form.fields.control_value}",
        "control_label": "${yooessentials.form.fields.control_label}",
        "control_size": "${yooessentials.form.fields.control_size}",
        "control_width": "${yooessentials.form.fields.control_width}",
        "position": "${builder.position}",
        "position_left": "${builder.position_left}",
        "position_right": "${builder.position_right}",
        "position_top": "${builder.position_top}",
        "position_bottom": "${builder.position_bottom}",
        "position_z_index": "${builder.position_z_index}",
        "margin": "${builder.margin}",
        "margin_remove_top": "${builder.margin_remove_top}",
        "margin_remove_bottom": "${builder.margin_remove_bottom}",
        "maxwidth": "${builder.maxwidth}",
        "maxwidth_breakpoint": "${builder.maxwidth_breakpoint}",
        "block_align": "${builder.block_align}",
        "block_align_breakpoint": "${builder.block_align_breakpoint}",
        "block_align_fallback": "${builder.block_align_fallback}",
        "text_align": "${builder.text_align}",
        "text_align_breakpoint": "${builder.text_align_breakpoint}",
        "text_align_fallback": "${builder.text_align_fallback}",
        "animation": "${builder.animation}",
        "_parallax_button": "${builder._parallax_button}",
        "visibility": "${builder.visibility}",
        "name": "${builder.name}",
        "status": "${builder.status}",
        "id": "${builder.id}",
        "class": "${builder.cls}",
        "attributes": "${builder.attrs}",
        "source": "${builder.source}",
        "transform": "${builder.transform}",
        "css": {
            "label": "CSS",
            "description": "Enter your own custom CSS. The following selectors will be prefixed automatically for this element: <code>.el-element</code>, <code>.el-link</code>",
            "type": "editor",
            "editor": "code",
            "mode": "css",
            "attrs": {
                "debounce": 500
            }
        }
    },
    "fieldset": {
        "default": {
            "type": "tabs",
            "fields": [
                {
                    "title": "Content",
                    "fields": [
                        "control_name",
                        "control_value",
                        "control_required",
                        "control_minlength",
                        "control_maxlength",
                        "control_pattern",
                        "control_error_message"

                    ]
                },
                {
                    "title": "Field",
                    "fields": [
                        "control_label",
                        "control_placeholder",
                        "control_id",
                        "control_id_inherit",
                        "control_attrs"
                    ]
                },
                {
                    "title": "Settings",
                    "fields": [
                        {
                            "label": "Field",
                            "type": "group",
                            "divider": true,
                            "fields": [
                                "control_readonly",
                                "control_autofocus",
                                "control_size",
                                "control_width",
                                "control_rows"
                            ]
                        },
                        {
                            "label": "General",
                            "type": "group",
                            "fields": [
                                "position",
                                "position_left",
                                "position_right",
                                "position_top",
                                "position_bottom",
                                "position_z_index",
                                "margin",
                                "margin_remove_top",
                                "margin_remove_bottom",
                                "maxwidth",
                                "maxwidth_breakpoint",
                                "block_align",
                                "block_align_breakpoint",
                                "block_align_fallback",
                                "text_align",
                                "text_align_breakpoint",
                                "text_align_fallback",
                                "animation",
                                "_parallax_button",
                                "visibility"
                            ]
                        }
                    ]
                },
                "${builder.advanced}"
            ]
        }
    }
}
