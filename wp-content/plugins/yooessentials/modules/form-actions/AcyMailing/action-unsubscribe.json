{
    "name": "acymailing-unsubscribe",
    "title": "Unsubscribe",
    "description": "Unsubcribe an AcyMailing list subscriber",
    "icon": "${url:~yooessentials_url/modules/form-actions/AcyMailing/icon.svg}",
    "group": "Misc",
    "collection": "AcyMailing",
    "fields": {
        "subscriber_email": {
            "label": "Email Address",
            "description": "Subscriber's email address.",
            "source": true
        },
        "_lists": {
            "type": "yooessentials-async-fields",
            "endpoint": "yooessentials/form/action/acymailing/lists"
        },
        "name": "${yooessentials.form.fields.action_name}",
        "status": "${yooessentials.form.fields.action_status}",
        "conditions": "${yooessentials.form.fields.action_conditions}"
    },
    "fieldset": {
        "default": {
            "type": "tabs",
            "fields": [
                {
                    "title": "Action",
                    "fields": [
                        "subscriber_email",
                        "_lists"
                    ]
                },
                {
                    "title": "Advanced",
                    "fields": [
                        "name",
                        "status",
                        "conditions"
                    ]
                }
            ]
        }
    }
}
